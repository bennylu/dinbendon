{
    "manifest_version" : 2,

    "name" : "訂扁冬了沒",
    "description" : "訂扁冬了沒除了提醒您每日記得訂扁冬，也方便讓您查詢今天要拿什麼扁冬，以免拿錯別人的扁冬。",
    "version" : "1.0.9",

    "browser_action" : {
        "default_icon" : "small_text.png",
        "default_title" : "訂扁冬了沒",
        "default_popup" : "popup.html"
    },
	
	"background": {
		"scripts" : ["eventPage.js"],
		"persistent" : false
	},

    "permissions" : [
        "activeTab",
        "storage",
        "notifications",
		"alarms",
		"tabs",
        "background",
        "http://*/*",
        "https://*/*"
    ]
}
